{% macro button(
	className = '',
	filled = false,
	type = 'button',
	ariaLabel = '',
	dataCounter = '',
	children = 'Button text'
) %}

	{% set modifier = '' %}
	{% if filled %} {% set modifier = 'button_filled' %} {% endif %}

	<button
		class="button {{ modifier }} {{ className }}"
		type="{{ type }}"
		{% if ariaLabel %} aria-label="{{ ariaLabel }}" {% endif %}
		{% if dataCounter %} data-counter="{{ dataCounter }}" {% endif %}
	>
		{{ children }}
	</button>

{% endmacro %}
