{% macro button(props) %}
	<button
		{% if props.className %} class='button {{props.className}}' {% else %} class="button" {% endif %}
		{% if props.attr %} {{ props.attr }} {% endif %}
	>
		{{ props.children }}
		{% if props.chevronRight %}
			<span class="button__chevron-right">&gt;</span>
		{% endif %}
	</button>
{% endmacro %}
