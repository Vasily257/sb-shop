{% macro button(
	className = '',
	filled = false,
	type = 'button',
	ariaLabel = '',
	ariaDescribedby = '',
	children = 'Button text'
) -%}

	{% set modifier = '' %}
	{% if filled %}
		{% set modifier = 'button_filled' %}
	{% endif %}

	<button
		class="button {{ modifier }} {{ className }}"
		type="{{ type }}"
		{% if ariaLabel %} aria-label="{{ ariaLabel }}" {% endif %}
		{% if ariaDescribedby %} aria-describedby="{{ ariaDescribedby }}" {% endif %}
	>
		{{- children -}}
	</button>

{%- endmacro %}
